<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- 콘솔 출력 패턴 지정 -->
	<appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{yyyy-MM-dd} %-5level ===== [%thread] %logger{36} -%msg%n
			</pattern>
		</encoder>
	</appender>
	
	<!-- log 파일로 저장 -->
	<appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>src/main/resources/logs/logger_log.log</file>
		
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%thread] [%-5level] %logger{36} - %msg%n	<!-- 초를 안쓰면 덮어씌어짐 -->
			</pattern>
		</encoder>
		
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>
				src/main/resources/logs/logger-%d{yyyy-MM-dd}.log <!-- 저장파일명 -->
			</fileNamePattern>
			<maxhistory>30</maxhistory> <!-- 며칠단위로 저장할거냐 -->
		</rollingPolicy>
	</appender>
	
	
	<logger name="com.study" level="info" additivity="false">
		<appender-ref ref="consoleAppender" />
		<appender-ref ref="fileAppender" />
	</logger>
	
	<root level = "info">
		<appender-ref ref="consoleAppender" />
	</root>
</configuration>